<Window x:Class="WpfSendMail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSendMail"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbServer" HorizontalAlignment="Left" Height="23" Margin="43,41,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" Width="412"/>
        <TextBox x:Name="tbFrom" HorizontalAlignment="Left" Height="23" Margin="43,85,0,0" TextWrapping="Wrap" Text="From:" VerticalAlignment="Top" Width="412"/>
        <TextBox x:Name="tbTo" HorizontalAlignment="Left" Height="23" Margin="43,132,0,0" TextWrapping="Wrap" Text="To:" VerticalAlignment="Top" Width="412"/>
        
        <Button Content="Send" HorizontalAlignment="Left" Margin="43,178,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
